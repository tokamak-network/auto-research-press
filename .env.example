# Anthropic API Key (required for Claude models)
ANTHROPIC_API_KEY=sk-ant-...

# Optional: LiteLLM/OpenRouter for other providers (Google, OpenAI, DeepSeek)
# LLM_API_KEY=sk-...
# LLM_BASE_URL=https://your-litellm-or-openrouter-endpoint/v1

# Provider-specific keys (optional)
# OPENAI_API_KEY=sk-...
# GOOGLE_API_KEY=...

# Auth
RESEARCH_API_KEYS=key1,key2       # comma-separated allowed keys
RESEARCH_ADMIN_KEY=admin-secret   # admin API key

# Server
PORT=8000

# Default Models
DEFAULT_WRITER_MODEL=claude-opus-4-6
DEFAULT_REVIEWER_MODEL=claude-sonnet-4.5

# Workflow Settings
MAX_REVIEW_ROUNDS=3
SCORE_THRESHOLD=8.0
